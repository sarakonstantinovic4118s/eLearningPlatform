@model List<Kursevi>
@{
    Skola skola = ViewBag.skola;
}

<h2>@skola.naziv</h2>
<a class="full-view" asp-controller="Kursevi" asp-action="Courses" asp-route-schoolID="@skola.skolaID">Go to full view</a>
@foreach (var k in Model)
{
    <div class="school-course">
        <div class="course-img">
            <img src="@k.slika" alt="@k.imekursa" />
        </div>
        <div class="course-name">
            @k.imekursa
        </div>
        <a asp-controller="Kursevi" asp-action="CourseDetails" asp-route-id="@k.kursID" target="_blank"></a>
    </div>
}